  <div class="top-wrapper">
    <div class="container">
      <h1>投稿詳細画面</h1>
      <p>投稿: <%= @picture.content %></p>
      <div>
        <% unless @picture.user_id == current_user.id %>
          <% if @favorite.present? %>
            <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
          <% else %>
            <%= link_to 'お気に入りする', favorite_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
          <% end %>
        <% end %>
        <%= link_to "ブログ一覧画面にもどる", pictures_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  
